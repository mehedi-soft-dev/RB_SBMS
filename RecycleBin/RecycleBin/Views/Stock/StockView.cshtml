@model RecycleBin.Models.StockViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h4>
            <i class="fa fa-home"></i>
            Stock Module
            <i class="fa fa-angle-right"></i> View Reports
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="text-center">
            <h3 class="text-primary">Stock Status</h3>
        </div>
        
        <div class="row">

            <form method="post">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Start Date </label>
                        <input type="date" name="startDate" class="form-control"/>

                    </div>
                    <div class="col-lg-2">
                        <label>End Date </label>
                        <input type="date" name="endDate" class="form-control" />

                    </div>
                    <div class="col-lg-2">
                        <label></label><br/>
                        <input type="submit" name="startDate" class="btn btn-info" value="Submit"/>
                    </div>

                </div>
                
            </form>

        </div>
        <div class="row">
            <br/>
        </div>
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="myTable">
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Product</th>
                        <th>Re-Order Level</th>
                        <th>Opening Balance</th>
                        <th>Stock In</th>
                        <th>Stock Out</th>
                        <th>Closing Balance</th>
                    </tr>
                </thead>
                @{ int sl = 0;}
                <tbody>
                    @foreach (var product in Model.StockViews)
                    {
                    <tr>
                        <td>@(++sl)</td>
                        <td>@product.Product</td>
                        <td>@product.ReOrderLevel</td>
                        <td>@product.OpeningBalance</td>
                        <td>@product.StockIn</td>
                        <td>@product.StockOut</td>
                        <td>@product.ClosingBalance</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
