@model RecycleBin.Models.PurchaseViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h4>
            <i class="fa fa-home"></i>
            Purchase Module
            <i class="fa fa-angle-right"></i> Purchase Report
            <i class="fa fa-angle-right"></i> Purchase Details
        </h4>
        <hr />
    </div>
</div>

<div class="text-center"><h3>Purchase Details</h3></div>

<div class="adv-table">
    <table>
        <tbody>
            <tr>
                <td>Date </td>
                <td> :</td>
                <td>@Model.Date.ToShortDateString()</td>
            </tr>
        <tr>
            <td>Supplier</td>
            <td> : </td>

            <td>@Model.Supplier.Name</td>
        </tr>
        <tr>
            <td>Invoice No</td>
            <td> : </td>

            <td>@Model.InvoiceNo</td>
        </tr>
        </tbody>
    </table>
</div>
<br/><br/>
<div class="adv-table">
    <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="myTable">
        <thead>
            <tr>
                <td>SL</td>
                <td>Product</td>
                <td>Manufactured Date</td>
                <td>Expire Date</td>
                <td>Quantity</td>
                <td>Unit Price</td>
                <td>Total Price</td>
            </tr>
        </thead>
        <tbody>
        @{
            int sl = 0;
            double total = 0;
        }
        @foreach (var pd in Model.PurchaseDetailses)
        {
            total += pd.UnitPrice * pd.Quantity;
            <tr>
                <td>@(++sl)</td>
                <td>@pd.Product.Name</td>
                <td>@pd.ManufacturdeDate</td>
                <td>@pd.ExpireDate</td>
                <td>@pd.Quantity</td>
                <td>@pd.UnitPrice</td>
                <td>@(pd.UnitPrice*pd.Quantity)</td>
            </tr>
        }
        
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>Total</td>
                <td>@total</td>
            </tr>
        </tfoot>
    </table>
</div>