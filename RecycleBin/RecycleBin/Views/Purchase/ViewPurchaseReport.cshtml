@using RecycleBin.Models
@model RecycleBin.Models.PurchaseViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h4>
            <i class="fa fa-home"></i>
            Purchase Module
            <i class="fa fa-angle-right"></i> Purchase Report
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="text-center">
            <h3>Purchase Report</h3>
        </div>
        <div class="row text-right">
            <div class="col-lg-1"></div>
            <div class="col-lg-2 btn btn-block">
                @Html.ActionLink("Print As PDF", "PrintViewToPdf", "Purchase",null, new{@class ="btn btn-block"})
            </div>
        </div>
        <div class="row">
            <br/>
        </div>
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="myTable">
                <thead>
                <tr>
                    <th>SL</th>
                    <th>Date</th>
                    <th>Invoice No</th>
                    <th>Supplier</th>
                    <th>Details</th>
                </tr>
                </thead>
                @{ int sl = 0;}
                <tbody>
                @foreach (var purchase in Model.Purchases)
                {
                    <tr>
                        <td>@(++sl)</td>
                        <td>@purchase.Date.ToShortDateString()</td>
                        <td>@purchase.InvoiceNo</td>
                        <td>@purchase.Supplier.Name</td>
                        <td>@Html.ActionLink("Details", "ViewPurchaseDetails", "Purchase", new { purchaseId = purchase.Id, @class="btn btn-primary"}, null)</td>
                        @*<td><button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Details</button></td>*@
                    </tr>
                }
                </tbody>
                
            </table>
        </div>

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <div class="modal-title" id="myModalLabel">Purchase Details</div>
                    </div>
                    <div class="modal-body">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script>
    $(document).ready(function () {

    });
</script>