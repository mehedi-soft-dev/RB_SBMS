@model RecycleBin.Models.ProductViewModel


<div class="row">
    <div class="col-lg-12">
        <div class="text-center">
            <h4>Available Products</h4>
        </div>
        <div class="row">
            <div class="col-lg-8">@Html.ActionLink("Print", "PrintViewToPdf", "Product")</div>
            <div class="col-lg-4 form-group">
                <div class="input-group custom-search-form">
                    <input id="myInput" type="text" class="form-control" placeholder="Search by Name or Code">
                    <span class="input-group-btn">
                        <button class="btn btn-info" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
            <br />
        </div>
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="myTable">
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Re-Order Level</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @{
                    int sl = 0;
                    var cat = Model.CategorySelectListItems;
                }
                <tbody>
                    @foreach (var product in Model.Products)
                    {


                        <tr>
                            <td>@(++sl)</td>
                            <td>@product.Code</td>
                            <td>@product.Name</td>
                            <td>@product.Category.Name</td>
                            <td>@product.ReOrderLevel</td>
                            <td>@product.Description</td>
                            <td><a href="#">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script>
    $(document).ready(function(){
        $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tbody tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>